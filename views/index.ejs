    <script>
        $(document).ready(function() {
            $('.announcement-item').on('click', function() {
                const announcementId = $(this).data('id');
                const announcementName = $(this).data('name');
                const announcementDetails = $(this).data('details');

                $('#announcementName').val(announcementName);
                $('#announcementDetails').val(announcementDetails);

                $('#announcementModal').modal('show');

                $('#saveAnnouncement').off('click').on('click', function() {
                    $.ajax({
                        url: '/update-announcement/' + announcementId,
                        type: 'POST',
                        data: {
                            announcementName: $('#announcementName').val(),
                            announcementDetails: $('#announcementDetails').val()
                        },
                        success: function(response) {
                            location.reload();
                        },
                        error: function(error) {
                            console.error('Error updating announcement:', error);
                        }
                    });
                });

                $('#deleteAnnouncement').off('click').on('click', function() {
                    $.ajax({
                        url: '/delete-announcement/' + announcementId,
                        type: 'GET',
                        success: function(response) {
